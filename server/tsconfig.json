{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "jsx": "preserve",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/routes.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}